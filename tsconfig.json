{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "ESNext",
		"skipLibCheck": true,
		"types": [
			"vite/client",
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@assets/*": [
				"./src/assets/*"
			],
			"@images/*": [
				"./src/assets/images/*"
			],
			"@audio/*": [
				"./src/assets/audio/*"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			]
		},
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}